.wrapper {
  width: 90%;
  height: 100%;
  margin: 0 auto;
}

.banner {
  width: 100%;
  height: 300rpx;
}

.banner image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.type {
  margin-top: 50rpx;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 150rpx;
  align-items: center;
  border-top: solid 3rpx #eee;
  border-bottom: solid 7rpx #ccc;
  font-size: 30rpx;
  text-align: center;
}

.typeImg {
  display: block;
  flex: 2.5;
  height: 70rpx;
}

.typeImg image {
  width: 80%;
  height: 100%;
}

.recommend {
  width: 100%;
}

.recomPro {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}

.recomCon {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-content: center;
  font-size: 30rpx;
  flex-wrap: wrap;
  margin-top: 10rpx;
}

.recomCon view {
  width: 45%;
  height: 250rpx;
  border: solid 2rpx #ccc;
}

.recomCon view .recomImg {
  width: 100%;
  height: 75%;
  background: lightblue;
}

.recomCon  text {
  display: inline-block;
  width: 100%;
  line-height: 50rpx;
  text-align: center;
}

.topic {
  width: 100%;
}

.albumPro {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}

.topic .activeE {
  width: 100%;
  height: 480rpx;
  border: solid 1rpx #ccc;
  display: block;
  border-radius: 15rpx;
  margin-top: 20rpx;
  box-shadow: 0px 3px 8px 0px rgba(0, 0, 0, 0.05);
}

.topic .activeE image {
  width: 100%;
  height: 80%;
}

.time {
  width: 161px;
  height: 37px;
  font-size: 26rpx;
  font-family: PingFangSC-Medium, PingFangSC;
  font-weight: 500;
  color: red;
  line-height: 37px;
  z-index: 999;
  position: fixed;
  left: 90%;
  bottom: 40rpx;
}

.topic .activeE text {
  display: block;
  width: 100%;
  text-indent: 40rpx;
}

.weight {
  font-size: 30rpx;
  font-weight: bold;
}

.ccc {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(136, 136, 136, 1);
}

.more {
  display: inline-block;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-weight: 400;
  font-size: 28rpx;
  color: rgba(178, 178, 178, 1);
}
