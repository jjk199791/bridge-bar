/* pages/mine/mine.wxss */

page {
  height: 100%;
}

.wrapper {
  width: 100%;
  height: 100vh;
}

.logo {
  width: 100%;
  height: 180rpx;
  position: relative;
  border-bottom-left-radius: 30%;
  border-bottom-right-radius: 30%;
  background: #fccb00;
}

.content {
  width: 90%;
  left: 40rpx;
  top: 40rpx;
  border-radius: 20rpx;
  position: absolute;
  z-index: 999rpx;
}

.top {
  width: 100%;
  height: 210rpx;
  background: white;
  box-shadow: 0px 2px 8px -2px #000;
  border-radius: 20rpx;
}

.list {
  width: 100%;
  margin-top: 30rpx;
}

.list view {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  border-bottom: solid 2rpx #ccc;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
}

.list view image {
  width: 10%;
  height: 70%;
}

.list text {
  padding-left: 20rpx;
}
