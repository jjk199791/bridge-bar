/* pages/lessonPwd/lessonPwd.wxss */

.wrap {
  width: 100%;
  height: 100vh;
  position: relative;
  background: linear-gradient(#f7c001, #59bbae);
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  color: white;
}

input::-webkit-input-placeholder {
  color: red;
}

.logoCon {
  width: 100%;
  height: 100rpx;
}

.logoCon .logo {
  width: 30%;
  height: 100rpx;
  display: flex;
  position: absolute;
  right: 20rpx;
  top: 30rpx;
}

.study {
  width: 100%;
  height: 200rpx;
  font-size: 70rpx;
  color: white;
  margin-top: 60rpx;
}

.study text {
  display: block;
  padding-left: 40rpx;
}

.formCon {
  width: 80%;
  height: 700rpx;
  margin: 0 auto;
}

.formCon {
  width: 80%;
  color: white;
  margin: 0 auto;
}

.formCon input {
  width: 100%;
  height: 100rpx;
  margin-top: 30rpx;
  line-height: 100rpx;
  border-bottom: solid 2rpx white;
  font-size: 34rpx;
  font-family: PingFangSC-Regular, PingFangSC;
  font-weight: 400;
  color: white;
}

.get {
  display: flex;
  justify-content: space-around;
  position: relative;
}

.getCode {
  width: 30%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  position: absolute;
  right: 0;
  bottom: 0;
  border-radius: 15rpx;
  border: solid 1rpx white;
  font-size: 26rpx;
}

.cheapPro {
  width: 100%;
  height: 100rpx;
  margin-top: 90rpx;
  font-size: 26rpx;
  color: rgba(136, 136, 136, 1);
}

.login {
  width: 90%;
  height: 100rpx;
  position: relative;
  margin-top: -120rpx;
}

.login image {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  right: 0;
}
.Login {
  width: 80%;
  height: 40rpx;
  display: flex;
  margin:0 auto;
  justify-content: space-between;
  line-height: 40rpx;
  margin-top:60rpx;
}

.Login text {
  font-size: 34rpx;
  font-family: PingFangSC-Regular, PingFangSC;
  font-weight: 400;
  color:white;
  border-bottom: solid 2rpx white;
}
