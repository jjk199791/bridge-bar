/* pages/key/key.wxss */

.wrap {
  width: 100%;
  height: 100vh;
  position: relative;
  background: #eee;
}

.top {
  width: 100%;
  height: 50%;
  background: #f6b402;
  border-bottom-left-radius: 80rpx;
  border-bottom-right-radius: 80rpx;
}

.wrap .con {
  width: 90%;
  height: 850rpx;
  background: white;
  border-radius: 15rpx;
  position: absolute;
  top: 20%;
  left: 5%;
  margin: 0 auto;
  z-index: 1;
}

.wrap .con .content {
  width: 100%;
  height: 80%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.wrap .con .content .tit {
  display: inline-block;
  width: 100%;
  text-align: center;
  margin-top: 70rpx;
}

.content .password {
  width: 450rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: inline-block;
  border-radius: 50rpx;
  border: solid 1rpx #888;
  color: #bfbfbf;
  text-align: center;
  font-size: 27rpx;
  margin: 0 auto;
  margin-top: 50rpx;
}

.warn {
  display: flex;
  width: 100%;
  color: #b8b8b8;
  font-size: 28rpx;
  margin-top: 40rpx;
}

.getPwd {
  display: inline-block;
  width: 100%;
  color: #f8c027;
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx;
}

.confirm {
  border-radius: 40rpx;
  background: #f6b503;
  color: white;
  font-size: 34rpx;
  text-align: center;
  margin-top: 120rpx;
}

.bridge {
  width: 100%;
  color: #f8c027;
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx;
}

.tip {
  width: 80%;
  font-size: 30rpx;
  text-align: center;
}
