/* pages/readBook/readBook.wxss */

.wrap {
  width: 90%;
  margin: 0 auto;
}

.top {
  width: 100%;
  top: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.top input {
  width: 85%;
  height: 100rpx;
  line-height: 100rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 2px 8px 0px rgba(0, 0, 0, 0.07);
  border-radius: 5px 0px 5px 5px;
  text-align: center;
  font-size: 27rpx;
  font-family: PingFangSC-Regular, PingFangSC;
  font-weight: 400;
  position: relative;
  color: rgba(51, 51, 51, 1);
}
.top .search{
  width:50rpx;
  height:50rpx;
  position: absolute;
  left:70rpx;
  top:30rpx;
}
.top image {
  width: 80rpx;
  height: 80rpx;
}

.recomCon {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-content: center;
  font-size: 30rpx;
  flex-wrap: wrap;
  margin-top: 10rpx;
}

.recomCon view {
  width: 45%;
  height: 300rpx;
  border: solid 2rpx #ccc;
  margin-top: 25rpx;
  position: relative;
  border-radius: 15rpx;
}

.recomCon view text:nth-child(2) {
  width: 100%;
  display: block;
  text-align: center;
  font-size: 24rpx;
}

.recomCon view text:nth-child(3) {
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  display: block;
  color: #ababab;
}

.recomCon view .recomImg {
  width: 100%;
  height: 75%;
  border-radius: 15rpx;
}

.load {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #b2b2b2;
  font-size: 30rpx;
  margin-top: 20rpx;
}

.none {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 30rpx;
  color: #b2b2b2;
  width: 100%;
  height: 300rpx;
  margin-top: 20rpx;
  text-align: center;
}

.none image {
  width: 40%;
  height: 80%;
}

