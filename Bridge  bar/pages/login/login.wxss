/* pages/login/login.wxss */

.wrap {
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 1);
}

.logo {
  width: 100%;
  height: 450rpx;
}

.formCon {
  width: 80%;
  margin: 0 auto;
}

.formCon input {
  width: 100%;
  height: 100rpx;
  margin-top: 30rpx;
  line-height: 100rpx;
  border-bottom: solid 3rpx #ccc;
  font-size: 34rpx;
  font-family: PingFangSC-Regular, PingFangSC;
  font-weight: 400;
  color: rgba(136, 136, 136, 1);
}

.right2 {
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.right2 image {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  right: 0;
}

.Login {
  width: 100%;
  height: 40rpx;
  display: flex;
  justify-content: space-between;
  line-height: 40rpx;
}

.Login text {
  font-size: 34rpx;
  font-family: PingFangSC-Regular, PingFangSC;
  font-weight: 400;
  color: rgba(136, 136, 136, 1);
  border-bottom: solid 2rpx #888;
}

.cheapPro {
  width: 100%;
  height: 100rpx;
margin-top:90rpx;
  font-size: 26rpx;
  color: rgba(136, 136, 136, 1);
}

.cheapPro .pro {
  width: 100%;
  text-align: center;
  display: block;
}

.cheap {
  text-align: center;
}

.cheap text {
  color: #f9c000;
}
