/* pages/lessonMain/lessonMain.wxss */

.wrap {
  width: 90%;
  margin: 0 auto;
}

.active {
  color: #f6b503;
}

.show {
  display: block;
}

.hidden {
  display: none;
}

.activeE {
  position: relative;
  width: 100%;
  height: 450rpx;
  border: solid 1rpx #ccc;
  display: block;
  border-radius: 15rpx;
  margin-top: 20rpx;
  box-shadow: 0px 3px 8px 0px rgba(0, 0, 0, 0.05);
}

.activeE .activePro {
  display: flex;
  align-content: center;
  position: absolute;
  width: 30%;
  text-align: center;
  height: 10%;
  line-height: 50rpx;
  background: rgba(0, 0, 0, 0.2);
  font-size: 25rpx;
  color: white;
  bottom: 0;
  right: 30rpx;
}

.activeE image {
  width: 100%;
  height: 100%;
}

.alnumPro {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-content: center;
}

.pro {
  width: 70%;
  margin-top: 10rpx;
}

.pro text {
  display: block;
  font-size: 27rpx;
  margin-top: 10rpx;
  text-indent: 30rpx;
  font-weight: bold;
}

.more {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(136, 136, 136, 1);
}

.number {
  width: 22%;
  height: 40%;
  background: f6b503;
  color: white;
  font-size: 26rpx;
  text-align: center;
  margin-top: 20rpx;
}

.tabbar {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  border: solid 2rpx #ececec;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  font-size: 25rpx;
  font-weight: bold;
  align-items: center;
  background: white;
}

.serve {
  width: 50%;
  display: flex;
  align-items: center;
  border-right: solid 2rpx #ececec;
}

.serve view {
  display: flex;
  margin: 0 auto;
}

.serve text {
  letter-spacing: 5rpx;
  margin-left: 15rpx;
}

.get {
  width: 50%;
  display: flex;
  align-items: center;
  border-right: solid 2rpx #ececec;
}

.get text {
  letter-spacing: 5rpx;
}

.get view {
  display: flex;
  align-items: center;
  margin: 0 auto;
}

.serve view {
  display: flex;
  align-items: center;
  margin: 0 auto;
}

.tabbar view image {
  width: 80rpx;
  height: 80rpx;
}

.tabbar view text {
  margin-right: 80rpx;
}

.headbar {
  width: 90%;
  height: 80rpx;
  margin: 0 auto;
  line-height: 80rpx;
  display: flex;
  justify-content: space-between;
  border: solid 1rpx #e8e8e8;
  margin-top: 20rpx;
}

.headbar text {
  width: 50%;
  text-align: center;
  font-weight: bold;
  font-size: 26rpx;
}

.headbar text:nth-child(2) {
  border: solid 1rpx #e8e8e8;
}

.content {
  width: 100%;
  height: 600rpx;
  border: dashed 2rpx black;
  margin-top: 40rpx;
}

.lessonPageList {
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  font-size: 16rpx;
  height: 1200rpx;
}

.lessonPageList image {
  width: 100rpx;
  height: 40rpx;
}

.eve {
  width: 100%;
  height: 170rpx;
  margin-top: 24rpx;
  display: flex;
}

.tv .trySee {
  font-size: 26rpx;
  width: 50%;
  height: 25%;
  background: #525ca7;
  position: absolute;
  top: 0;
  right: 10rpx;
  color: white;
  text-align: center;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.lessonPageList .eve .tv {
  width: 35%;
  height: 100%;
  position: relative;
}

.lessonPageList .eve .tv image {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}

.lessonPageList .eve .info {
  width: 65%;
  height: 100%;
  margin-left: 20rpx;
}

.info text {
  font-size: 30rpx;
  font-weight: bold;
  padding-top: 10rpx;
}

.info text:nth-child(2) {
  margin-left: 50rpx;
}

.seeNum {
  display: flex;
  margin-top: 20rpx;
}

.seeNum image {
  width: 40rpx;
  height: 50rpx;
}

.seeNum text {
  color: rgba(136, 136, 136, 1);
}

.seeNum .num {
  margin-left: -300rpx;
}

.load {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #b2b2b2;
  font-size: 30rpx;
  margin-top: 20rpx;
}

.none {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 30rpx;
  color: #b2b2b2;
  width: 100%;
  height: 300rpx;
  margin-top: 20rpx;
  text-align: center;
}

.none image {
  width: 40%;
  height: 80%;
}
